// Prisma Schema Generator
generator client {
  provider = "prisma-client-js"
}

// Reference to my psql database
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// My current models for both PersonalSightings and for the to-be-retrieved Occurrences
// More models will follow but those two are the most important ones.
// Occurrence is visibly somewhat haphazardly put together, mainly because I was
// intimidated by the amount of data I'll have to sort
model PersonalSighting {
  id            Int      @id @default(autoincrement())
  date          DateTime
  vernacular    String
  sst           Float
  sss           Float
  shoredistance Int
  depth         Int?
  count         Int
  imgURL        String
  longitude     Float
  latitude      Float
  country       String
  createdAt     DateTime @default(now())
}

model Occurrence {
  id                            String      @id
  createdAt                     DateTime @default(now())
  basisOfRecord                 String?
  datasetName                   String?
  dataset_id                    String?
  scientificName                String?
  originalScientificName        String?
  vernacularName                String?
  decimalLatitude               Float?
  decimalLongitude              Float?
  coordinateUncertaintyInMeters String?
  country                       String?
  sex                           String?
  locality                      String?
  waterBody                     String?
  sst                           Float?
  sss                           Float?
  habitat                       String?
  eventDate                     DateTime?
  date_start                    DateTime?
  eventID                       String?
  occurrenceID                  String?
  minimumDepthInMeters          Int?
  maximumDepthInMeters          Int?
  depth                         Float?
  organismQuantity              Int?
  individualCount               Float?
  recordedBy                    String?
  shoredistance                 Int?
  marine                        Boolean?
  brackish                      Boolean?
  flags                         String[]
  category                      String?
}
